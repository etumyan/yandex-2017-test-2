<section class="js-section pure-g">
  <div class="pure-u-2-3">
    <h2>Lectures</h2>
    {{#if lectures}}
    <table class="pure-table pure-table-striped" style="width: 100%;">
      <thead>
        <th class="cell-fit">ID</th>
        <th>Name</th>
        <th>Reader</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th class="cell-fit">Room ID</th>
        <th class="cell-fit">&nbsp;</th>
      </thead>
      <tbody>
        {{#each lectures}}
          <tr>
            <td class="cell-fit">{{id}}</td>
            <td>{{name}}</td>
            <td>{{reader}}</td>
            <td>{{date startDate}}</td>
            <td>{{date endDate}}</td>
            <td class="cell-fit">{{RoomId}}</td>
            <td class="cell-fit">
              <a class="js-item-edit" href="/api/lectures/{{id}}">Edit</a> |
              <a href="/api/lectures/{{id}}" data-ajax data-method="delete">Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    {{else}}
      <div class="alert alert_type_danger figured-background">No data found.</div>
    {{/if}}
  </div>
  <div class="pure-u-1-3">
    <form class="js-add-form pure-form pure-form-stacked" action="/api/lectures" method="post" data-ajax>
      <div class="js-show-on-add">
        <h2>Add Lecture</h2>
      </div>
      <div class="js-show-on-edit hide">
        <h2>Edit Lecture (ID&nbsp;<span class="js-item-id"></span>)</h2>
      </div>
      <div class="panel">
        <div class="form-group">
          <label for="add-lecture-form-name">Name</label>
          <input id="add-lecture-form-name" name="name" type="text" required>
        </div>
        <div class="form-group">
          <label for="add-lecture-form-reader">Reader</label>
          <input id="add-lecture-form-reader" name="reader" type="text" required>
        </div>
        <div class="form-group">
          <label for="add-lecture-form-start-date">Start Date</label>
          <input id="add-lecture-form-start-date" name="startDate" type="text" required>
        </div>
        <div class="form-group">
          <label for="add-lecture-form-end-date">End Date</label>
          <input id="add-lecture-form-end-date" name="endDate" type="text" required>
        </div>
        <div class="form-group">
          <label for="add-lecture-form-room-id">Room ID</label>
          <input id="add-lecture-form-room-id" name="RoomId" type="number" min="1" required>
        </div>
        <div class="js-show-on-add">
          <button class="pure-button pure-button-primary" type="submit">Create</button>
          <button class="pure-button" type="reset">Reset</button>
        </div>
        <div class="js-show-on-edit hide">
          <button class="pure-button pure-button-primary" type="submit">Save</button>
          <button class="js-item-edit-cancel pure-button" type="reset" data-create-url="/api/lectures">Cancel</button>
        </div>
      </div>
    </form>
  </div>
</section>
