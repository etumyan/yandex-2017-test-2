<section class="js-section pure-g">
  <div class="pure-u-2-3">
    <h2>Schools</h2>
    {{#if schools}}
    <table class="pure-table pure-table-striped" style="width: 100%;">
      <thead>
        <th class="cell-fit">ID</th>
        <th>Name</th>
        <th>Student Number</th>
        <th class="cell-fit">&nbsp;</th>
      </thead>
      <tbody>
        {{#each schools}}
          <tr>
            <td class="cell-fit">{{id}}</td>
            <td>{{name}}</td>
            <td>{{studentNumber}}</td>
            <td class="cell-fit">
              <a class="js-item-edit" href="/api/schools/{{id}}">Edit</a> |
              <a href="/api/schools/{{id}}" data-ajax data-method="delete">Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    {{else}}
      <div class="alert alert_type_danger figured-background">No data found.</div>
    {{/if}}
  </div>
  <div class="pure-u-1-3">
    <form class="js-add-form pure-form pure-form-stacked" action="/api/schools" method="post" data-ajax>
      <div class="js-show-on-add">
        <h2>Add School</h2>
      </div>
      <div class="js-show-on-edit hide">
        <h2>Edit School (ID&nbsp;<span class="js-item-id"></span>)</h2>
      </div>
      <div class="panel">
        <div class="form-group">
          <label for="add-school-form-name">Name</label>
          <input id="add-school-form-name" name="name" type="text" required>
        </div>
        <div class="form-group">
          <label for="add-school-form-student-number">Student Number</label>
          <input id="add-school-form-student-number" name="studentNumber" type="number" min="0" required>
        </div>
        <div class="js-show-on-add">
          <button class="pure-button pure-button-primary" type="submit">Create</button>
          <button class="pure-button" type="reset">Reset</button>
        </div>
        <div class="js-show-on-edit hide">
          <button class="pure-button pure-button-primary" type="submit">Save</button>
          <button class="js-item-edit-cancel pure-button" type="reset" data-create-url="/api/schools">Cancel</button>
        </div>
      </div>
    </form>
  </div>
</section>
